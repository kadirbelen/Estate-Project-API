{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "quotes": [
            2,
            "double",
            "avoid-escape"
        ],

        "indent": [
            "error",
            4
        ],
        "max-len": [
            "error",
            {
                "code": 90
            }
        ]
    }
}
